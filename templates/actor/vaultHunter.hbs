<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
    <header class="sheet-header">

    </header>
    <div class="grid grid-4col">
        <section class="main">
            {{> actorDefense}}
        </section>
    </div>
                

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item" data-tab="equipment">Equipment</a>
      <a class="item" data-tab="items">Items</a>
      <a class="item" data-tab="character">Character</a>
      <a class="item" data-tab="effects">Effects</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
      <div class="tab" data-group="primary" data-tab="equipment">
        <h2>Equipment</h2>
        {{> actorEquipment}}
      </div>
      <div class="tab" data-group="primary" data-tab="items">
        <h2>Items</h2>
        {{> actorItems}}
      </div>
      <div class="tab" data-group="primary" data-tab="character">
        <h2>Character</h2>
        {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
        {{editor background target="system.background" engine="prosemirror" button=true editable=editable}}
        {{editor characterInfo target="system.characterInfo" engine="prosemirror" button=true editable=editable}}
            {{> actorSkills}}
      </div>
      <div class="tab effects flexcol" data-group="primary" data-tab="effects">
        <h2>Effects</h2>
        {{> actorActiveEffects}}
      </div>

    </section>
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
</form>