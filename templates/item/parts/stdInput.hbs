<input class="{{inputClass}}" 
    onfocus="this.select()"
    value="{{inputValue}}"
    {{#if inputName}}
        name="{{inputName}}"
    {{/if}}
    {{#if minimum}}
        min="{{minimum}}"
    {{/if}}
    {{#if maximum}}
        max="{{maximum}}"
    {{/if}}
    type="number" data-dtype="Number"
/>