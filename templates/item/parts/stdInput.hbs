<input class="{{inputClass}}" 
    value="{{inputValue}}"
    {{#if inputName}}
        name="{{inputName}}"
    {{/if}}
    {{#if minimum}}
        min="{{minimum}}"
    {{/if}}
    {{#if maximum}}
        max="{{maximum}}"
    {{/if}}
    {{#if data-action}}
        data-action="{{data-action}}"
    {{/if}}
    type="number"
/>